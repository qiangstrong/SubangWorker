<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2.0dip"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_categorylogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:padding="10.0dip"
            android:src="@drawable/washing_clothes" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_categorylogo"
            android:layout_alignTop="@id/iv_categorylogo"
            android:layout_toRightOf="@id/iv_categorylogo"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_categoryname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="洗衣"
                android:textColor="#ff332b2b"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_categorylogo"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_categorylogo"
            android:layout_marginRight="10.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff097de9"
                android:textSize="16.0sp" />
        </LinearLayout>

        <View
            android:id="@+id/v_item_line_1"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/iv_categorylogo"
            android:layout_marginLeft="15.0dip"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_orderno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_item_line_1"
            android:layout_marginLeft="30.0dip"
            android:layout_marginTop="10.0dip"
            android:text=""
            android:textColor="#ff332b2b" />

        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_orderno"
            android:layout_marginLeft="30.0dip"
            android:layout_marginTop="10.0dip"
            android:text=""
            android:textColor="#ff332b2b" />

        <View
            android:id="@+id/v_item_line_2"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/tv_datetime"
            android:layout_marginLeft="30.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_item_line_2"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip">

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30.0dip"
                android:text=""
                android:textColor="#ff332b2b" />

            <TextView
                android:id="@+id/tv_operation_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5.0dip"
                android:layout_toLeftOf="@+id/tv_operation_1"
                android:background="@drawable/order_operation_bg"
                android:clickable="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/blue_theme"
                android:visibility="invisible" />

            <TextView
                android:id="@id/tv_operation_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/order_operation_bg"
                android:clickable="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/blue_theme"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>